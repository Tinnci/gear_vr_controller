<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="GearVRController.Views.TouchpadCalibrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GearVRController.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24">
        <StackPanel Spacing="24">
            <TextBlock Text="触摸板校准" Style="{StaticResource TitleLargeTextBlockStyle}" />

            <InfoBar
                IsOpen="True"
                Severity="Informational"
                Title="校准说明"
                Message="请按照步骤完成触摸板校准。每个步骤完成后会自动进入下一步，您也可以手动点击下一步按钮继续。"
                IsClosable="False" />

            <!-- 实时操作指引 -->
            <TextBlock Text="{Binding CurrentStepGuidanceMessage}"
                Style="{StaticResource SubtitleTextBlockStyle}"
                Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                Margin="0,12,0,0"
                TextWrapping="Wrap" />

            <StackPanel Spacing="16">
                <TextBlock Text="校准步骤" Style="{StaticResource SubtitleTextBlockStyle}"
                    Margin="0,0,0,8" />

                <Grid ColumnSpacing="12" RowSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- 步骤指示器 -->
                    <Border Grid.Row="0" Grid.Column="0" Width="32" Height="32" CornerRadius="16"
                        Background="{Binding CurrentStep, Converter={StaticResource CalibrationStepToStyleConverter}, ConverterParameter=CircularMotion}"
                        BorderBrush="{ThemeResource SystemAccentColor}" BorderThickness="2">
                        <TextBlock
                            Text="{Binding CurrentStep, Converter={StaticResource CalibrationStepToContentConverter}, ConverterParameter=CircularMotion}"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            Foreground="{Binding CurrentStep, Converter={StaticResource CalibrationStepToForegroundConverter}, ConverterParameter=CircularMotion}" />
                    </Border>
                    <TextBlock Grid.Row="0" Grid.Column="1" VerticalAlignment="Center"
                        Text="在触摸板边缘顺时针划一个完整的圆，尽量贴近边缘" TextWrapping="Wrap" />

                    <Border Grid.Row="1" Grid.Column="0" Width="32" Height="32" CornerRadius="16"
                        Background="{Binding CurrentStep, Converter={StaticResource CalibrationStepToStyleConverter}, ConverterParameter=Center}"
                        BorderBrush="{ThemeResource SystemAccentColor}"
                        BorderThickness="2">
                        <TextBlock
                            Text="{Binding CurrentStep, Converter={StaticResource CalibrationStepToContentConverter}, ConverterParameter=Center}"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            Foreground="{Binding CurrentStep, Converter={StaticResource CalibrationStepToForegroundConverter}, ConverterParameter=Center}" />
                    </Border>
                    <TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"
                        Text="点击触摸板中心以记录中心点" TextWrapping="Wrap" />

                    <Border Grid.Row="2" Grid.Column="0" Width="32" Height="32" CornerRadius="16"
                        Background="{Binding CurrentStep, Converter={StaticResource CalibrationStepToStyleConverter}, ConverterParameter=Up}"
                        BorderBrush="{ThemeResource SystemAccentColor}"
                        BorderThickness="2">
                        <TextBlock
                            Text="{Binding CurrentStep, Converter={StaticResource CalibrationStepToContentConverter}, ConverterParameter=Up}"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            Foreground="{Binding CurrentStep, Converter={StaticResource CalibrationStepToForegroundConverter}, ConverterParameter=Up}" />
                    </Border>
                    <TextBlock Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"
                        Text="从中心向上滑动多次" TextWrapping="Wrap" />

                    <Border Grid.Row="3" Grid.Column="0" Width="32" Height="32" CornerRadius="16"
                        Background="{Binding CurrentStep, Converter={StaticResource CalibrationStepToStyleConverter}, ConverterParameter=Down}"
                        BorderBrush="{ThemeResource SystemAccentColor}"
                        BorderThickness="2">
                        <TextBlock
                            Text="{Binding CurrentStep, Converter={StaticResource CalibrationStepToContentConverter}, ConverterParameter=Down}"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            Foreground="{Binding CurrentStep, Converter={StaticResource CalibrationStepToForegroundConverter}, ConverterParameter=Down}" />
                    </Border>
                    <TextBlock Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"
                        Text="从中心向下滑动多次" TextWrapping="Wrap" />

                    <Border Grid.Row="4" Grid.Column="0" Width="32" Height="32" CornerRadius="16"
                        Background="{Binding CurrentStep, Converter={StaticResource CalibrationStepToStyleConverter}, ConverterParameter=Left}"
                        BorderBrush="{ThemeResource SystemAccentColor}"
                        BorderThickness="2">
                        <TextBlock
                            Text="{Binding CurrentStep, Converter={StaticResource CalibrationStepToContentConverter}, ConverterParameter=Left}"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            Foreground="{Binding CurrentStep, Converter={StaticResource CalibrationStepToForegroundConverter}, ConverterParameter=Left}" />
                    </Border>
                    <TextBlock Grid.Row="4" Grid.Column="1" VerticalAlignment="Center"
                        Text="从中心向左滑动多次" TextWrapping="Wrap" />

                    <Border Grid.Row="5" Grid.Column="0" Width="32" Height="32" CornerRadius="16"
                        Background="{Binding CurrentStep, Converter={StaticResource CalibrationStepToStyleConverter}, ConverterParameter=Right}"
                        BorderBrush="{ThemeResource SystemAccentColor}"
                        BorderThickness="2">
                        <TextBlock
                            Text="{Binding CurrentStep, Converter={StaticResource CalibrationStepToContentConverter}, ConverterParameter=Right}"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            Foreground="{Binding CurrentStep, Converter={StaticResource CalibrationStepToForegroundConverter}, ConverterParameter=Right}" />
                    </Border>
                    <TextBlock Grid.Row="5" Grid.Column="1" VerticalAlignment="Center"
                        Text="从中心向右滑动多次" TextWrapping="Wrap" />
                </Grid>
            </StackPanel>

            <Grid ColumnSpacing="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- 左侧：坐标数据 -->
                <StackPanel Grid.Column="0" Spacing="16">
                    <TextBlock Text="校准数据" Style="{StaticResource SubtitleTextBlockStyle}" />

                    <Grid ColumnSpacing="16" RowSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="X轴范围" FontWeight="SemiBold" />
                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal"
                            Spacing="8">
                            <TextBlock>
                                <Run Text="最小: " />
                                <Run Text="{Binding MinX, Mode=OneWay}" />
                            </TextBlock>
                            <TextBlock Text="|" />
                            <TextBlock>
                                <Run Text="最大: " />
                                <Run Text="{Binding MaxX, Mode=OneWay}" />
                            </TextBlock>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Y轴范围" FontWeight="SemiBold" />
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal"
                            Spacing="8">
                            <TextBlock>
                                <Run Text="最小: " />
                                <Run Text="{Binding MinY, Mode=OneWay}" />
                            </TextBlock>
                            <TextBlock Text="|" />
                            <TextBlock>
                                <Run Text="最大: " />
                                <Run Text="{Binding MaxY, Mode=OneWay}" />
                            </TextBlock>
                        </StackPanel>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="中心位置" FontWeight="SemiBold" />
                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal"
                            Spacing="8">
                            <TextBlock>
                                <Run Text="X: " />
                                <Run Text="{Binding CenterX, Mode=OneWay}" />
                            </TextBlock>
                            <TextBlock Text="|" />
                            <TextBlock>
                                <Run Text="Y: " />
                                <Run Text="{Binding CenterY, Mode=OneWay}" />
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- 校准结果可视化区域 -->
                <Border Grid.Column="0"
                    BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                    BorderThickness="1" CornerRadius="4" Margin="0,16,0,0"
                    Height="200" Width="200" HorizontalAlignment="Center">
                    <Canvas x:Name="CalibrationCanvas"
                        Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}">
                        <!-- 校准边界矩形 -->
                        <Rectangle x:Name="CalibrationRect"
                            Stroke="{ThemeResource SystemAccentColor}" StrokeThickness="2" />
                        <!-- 中心点 -->
                        <Ellipse x:Name="CalibrationCenterDot"
                            Width="{Binding Source={StaticResource CALIBRATION_CENTER_DOT_SIZE}, Mode=OneWay}"
                            Height="{Binding Source={StaticResource CALIBRATION_CENTER_DOT_SIZE}, Mode=OneWay}"
                            Fill="{ThemeResource SystemAccentColor}" />
                        <!-- 触摸点 -->
                        <Ellipse x:Name="CalibrationTouchDot"
                            Width="{Binding Source={StaticResource CALIBRATION_TOUCH_DOT_SIZE}, Mode=OneWay}"
                            Height="{Binding Source={StaticResource CALIBRATION_TOUCH_DOT_SIZE}, Mode=OneWay}"
                            Fill="Red" />
                        <!-- 校准历史轨迹 -->
                        <Polyline x:Name="CalibrationPath"
                            Stroke="{ThemeResource SystemAccentColor}" StrokeThickness="2" />
                    </Canvas>
                </Border>
            </Grid>

            <!-- 底部操作按钮 -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12"
                Margin="0,24,0,0">
                <Button Content="重置校准" Command="{Binding ResetCalibrationCommand}"
                    Style="{StaticResource AccentButtonStyle}" />
                <Button Content="手动下一步" Command="{Binding NextStepCommand}" />
                <Button Content="完成校准" Command="{Binding CompleteCalibrationCommand}"
                    IsEnabled="{Binding CanCompleteCalibration}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page> 