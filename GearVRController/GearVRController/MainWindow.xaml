<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="GearVRController.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GearVRController"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="GearVRController">

    <Grid Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Spacing="12">
            <TextBlock Text="Gear VR Controller" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock x:Name="StatusText" Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"/>
            
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button x:Name="ConnectButton" 
                        Content="连接设备" 
                        Click="ConnectButton_Click"/>
                <Button x:Name="DisconnectButton" 
                        Content="断开连接" 
                        Click="DisconnectButton_Click"
                        IsEnabled="{x:Bind ViewModel.IsConnected, Mode=OneWay}"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,24,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Spacing="8">
                <TextBlock Text="按钮状态" Style="{StaticResource SubtitleTextBlockStyle}"/>
                <CheckBox Content="扳机键" 
                          IsChecked="{x:Bind ViewModel.LastControllerData.TriggerButton, Mode=OneWay}"
                          IsEnabled="False"/>
                <CheckBox Content="Home键" 
                          IsChecked="{x:Bind ViewModel.LastControllerData.HomeButton, Mode=OneWay}"
                          IsEnabled="False"/>
                <CheckBox Content="返回键" 
                          IsChecked="{x:Bind ViewModel.LastControllerData.BackButton, Mode=OneWay}"
                          IsEnabled="False"/>
                <CheckBox Content="触摸板" 
                          IsChecked="{x:Bind ViewModel.LastControllerData.TouchpadButton, Mode=OneWay}"
                          IsEnabled="False"/>
                <CheckBox Content="音量+" 
                          IsChecked="{x:Bind ViewModel.LastControllerData.VolumeUpButton, Mode=OneWay}"
                          IsEnabled="False"/>
                <CheckBox Content="音量-" 
                          IsChecked="{x:Bind ViewModel.LastControllerData.VolumeDownButton, Mode=OneWay}"
                          IsEnabled="False"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Spacing="8">
                <TextBlock Text="传感器数据" Style="{StaticResource SubtitleTextBlockStyle}"/>
                <TextBlock>
                    <Run Text="触摸板 X:"/>
                    <Run Text="{x:Bind ViewModel.LastControllerData.AxisX, Mode=OneWay}"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="触摸板 Y:"/>
                    <Run Text="{x:Bind ViewModel.LastControllerData.AxisY, Mode=OneWay}"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="加速度 X:"/>
                    <Run Text="{x:Bind ViewModel.LastControllerData.AccelX, Mode=OneWay}"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="加速度 Y:"/>
                    <Run Text="{x:Bind ViewModel.LastControllerData.AccelY, Mode=OneWay}"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="加速度 Z:"/>
                    <Run Text="{x:Bind ViewModel.LastControllerData.AccelZ, Mode=OneWay}"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="陀螺仪 X:"/>
                    <Run Text="{x:Bind ViewModel.LastControllerData.GyroX, Mode=OneWay}"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="陀螺仪 Y:"/>
                    <Run Text="{x:Bind ViewModel.LastControllerData.GyroY, Mode=OneWay}"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="陀螺仪 Z:"/>
                    <Run Text="{x:Bind ViewModel.LastControllerData.GyroZ, Mode=OneWay}"/>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
